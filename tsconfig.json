{
  "compilerOptions": {
    "rootDir": "./src/ts/",
    "outDir": "./src/js/",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2021"],
    "module": "es2020",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2019"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
